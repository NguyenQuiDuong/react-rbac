{
  "name": "react-simple-rbac-reactjs-18",
  "version": "1.0.0",
  "description": "React app RBAC solution for Reactjs 18",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "types": "build/src",
  "keywords": [
    "react",
    "rbac",
    "role based access control",
    "security",
    "typescript"
  ],
  "lint-staged": {
    "src/**/*.+(ts|tsx|js|jsx)": [
      "eslint"
    ],
    "src/**/*.+(ts|tsx)": [
      "jest --findRelatedTests --watchAll=false"
    ],
    "src/**/*.+(ts|tsx|json)": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "npm run build && rimraf dist && rollup -c rollup-server.config.mjs -w",
    "prebuild": "rimraf build",
    "build": "rollup -c rollup.config.mjs",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prettier": "prettier . --ignore-path .gitignore",
    "format:check": "npm run prettier -- --check",
    "format:fix": "npm run prettier -- --write",
    "lint": "eslint --ext .tsx,.ts .",
    "type:check": "tsc",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "author": "yoniaiz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoniaiz/react-rbac"
  },
  "peerDependencies": {
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.5.12",
    "@types/lodash.isequal": "^4.5.8",
    "@types/react": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "babel-loader": "^9.1.3",
    "babel-preset-react-app": "^10.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-security": "^3.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "rollup": "^4.17.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-serve": "^1.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "lodash.isequal": "^4.5.0"
  }
}
